<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="PlantDef">
		<defName>Plant_Oats</defName>
		<label>Oat Grass</label>
		<description>Oat Grass is a cereal grain that produces Oats. Oats are useful as animal feed or can be cooked into food.</description>
		<graphicData>
			<texPath>Things/Plant/PlantOats_Harvest</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<plant>
			<maxMeshCount>4</maxMeshCount>
			<sowMinSkill>2</sowMinSkill>
			<sowResearchPrerequisites>
				<li>Food_Plants_A2</li>
			</sowResearchPrerequisites>
			<sowTags>
				<li>Ground</li>
				<li>Hydroponic</li>
			</sowTags>
			<immatureGraphicPath>Things/Plant/PlantOats</immatureGraphicPath>
			<harvestedThingDef>Rawoats</harvestedThingDef>
			<harvestYield>18</harvestYield>
			<topWindExposure>0.35</topWindExposure>
			<growDays>7</growDays>
			<fertilitySensitivity>0.8</fertilitySensitivity>
			<fertilityMin>0.45</fertilityMin>
			<visualSizeRange>
				<min>0.3</min>
				<max>1.1</max>
			</visualSizeRange>
			<wildOrder>2</wildOrder>
		</plant>
	</ThingDef>

</Defs>