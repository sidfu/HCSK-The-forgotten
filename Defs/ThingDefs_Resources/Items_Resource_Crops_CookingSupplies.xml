<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="RoughPlantBase">
		<defName>Rawoats</defName>
		<label>Oats</label>
		<description>Oats are a cereal grain commonly used for livestock feed or they can be cooked for food.</description>
		<graphicData>
			<texPath>Things/Item/oats</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<statBases>
			<MarketValue>1.5</MarketValue>
		</statBases>
		<tickerType>Rare</tickerType>   
		<thingCategories>
			<li>CookingSupplies</li>
		</thingCategories>
		<stuffProps>
			<categories>
				<li>Stuff</li>
			</categories>
		</stuffProps>
		<comps>
			<li Class="CompProperties_Rottable">
				<daysToRotStart>60</daysToRotStart>
			</li>
		</comps>
	</ThingDef>
	
    <ThingDef ParentName="SK_RoughPlantBase">
		<defName>Cornmeal</defName>
		<label>Cornmeal</label>
		<description>Simple cornmeal, used in baking.</description>
		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
			<texPath>Things/Item/Cornmeal</texPath>
		</graphicData>
		<statBases>
			<MarketValue>3</MarketValue>
		</statBases>
		<tickerType>Rare</tickerType>   
		<thingCategories>
			<li>CookingSupplies</li>
		</thingCategories>
		<stuffProps>
			<categories>
				<li>Stuff</li>
			</categories>
		</stuffProps>
		<comps>
			<li Class="CompProperties_Rottable">
				<daysToRotStart>60</daysToRotStart>
				<rotDestroys>true</rotDestroys>
			</li>
		</comps>
		<stackLimit>100</stackLimit>
	</ThingDef> 
	
</Defs>